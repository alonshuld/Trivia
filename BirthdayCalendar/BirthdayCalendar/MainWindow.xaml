<Window x:Class="BirthdayCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BirthdayCalendar"
        mc:Ignorable="d"
        Title="מסך התחברות" Height="200" Width="400">
    <Grid>
        <Button Name="LoginButton" Content="כניסה" HorizontalAlignment="Center" Margin="-200,120,0,0" VerticalAlignment="Center" Width="76" Height="24" FontSize="14"/>
        <Button Name="CancelButton" Content="ביטול" HorizontalAlignment="Center" Margin="200,120,0,0" VerticalAlignment="Center" Width="75" Height="24" FontSize="14"/>
        <Label Content=":שם משתמש" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,-100,0,0" FontSize="16"/>
        <Label Content=":סיסמה" Width="70" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,0,0,0" FontSize="16"/>
        <TextBox Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,0,0"/>
        <PasswordBox Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" PasswordChar="*"/>
    </Grid>
</Window>
